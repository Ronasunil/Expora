doctype html
head
  link(rel='preconnect' href='https://fonts.googleapis.com')
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@100;200;300;500;700;800&family=Open+Sans:wght@300&family=Quicksand:wght@300;400;500;600;700&family=Roboto+Condensed:wght@300;400;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100&display=swap' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@100;200;300;500;700;800&family=Open+Sans:wght@300&family=Quicksand:wght@300;400;500;600;700&family=Roboto+Condensed:wght@300;400;700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;1,100&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='css/signup.css')
  link(rel="stylesheet", href="css/signup-queries.css")
  link.title-icon(rel="icon" href="/img/Expora.png")
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title= title
.container
  .signup-container
    .signup-box
      h1.primary-heading.mg-bottom get started
      form.signup-form(action='')
        .row
          label.input-label(for='') Name
          input.name(type='text' required='' minlength='3' placeholder='Adam')
          p.error-name-paragraph 
        .row
          label.input-label Email
          input.email(type='email' required='' placeholder='adam@gmail.com')
          p.error-email-paragraph
        .row
          label.input-label(for='') password
          input.password(type='password' required='' pattern='(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}'  title='password must contain 8 character with atleast 1 lowercase character and 1 uppercase character' placeholder='Example1')
        .row
          label.input-label(for='') confirm password
          input.cpassword(type='password' required='' pattern='(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' title='Confirm password must be same as password' placeholder='Example1')
          p.err-paragraph 
        button.signup-btn(type='submit') Submit
        p.signup-box-login-desc
          | already have an account? 
          a.green-text(href='/login') Login       
        // <in  type="submit" value="sign up" class="signup-btn">
    .img-box
      .img
        img.signup-box-icon(src='/img/explore_beyond_map-removebg-preview.png' alt='')
        p.img-box-description Explore beyond maps
      .login-container
        p.login-description
          | already have an account? 
          a.login-link(href='/login') Login
        // <p class="login-description">are you an admin <a href="/admin-login" class="login-link">Login as Admin</a></p>

script(src="https://js.stripe.com/v3/") 
